.page
  - each column in columns 
    .column
      .header
        .edit-overlay
          span.delete
            span.default-control
              a.delete-button(href='#') Delete Column
            span.deleting-control
              span [\ 
              a.delete-confirm-button(href="#") Confirm Delete
              span \ - 
              a.cancel-button(href='#') Cancel
              span \ ] 
      .content
        - each feed in column.feeds
          .feed!= feed
